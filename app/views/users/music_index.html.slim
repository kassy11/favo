.search-form
  h3.text-center.font-weight-bold
    | アーティスト名で検索
  = form_with url: musics_index_path, locale: true do |f|
    = f.text_field :search
    = f.submit '検索',:name => nil
.list-index
  h1
    | MUSIC LIST
  - @user.musics.each do |my_music|
    - artist = RSpotify::Artist.find(my_music.artist_id)
    =artist.name
    - if artist.images.any?
      - image = artist.images[2]
      =link_to "/musics/#{artist.id}" do
        =image_tag image["url"]
    - else
      =image_tag("no_image.jpg")
    = link_to("削除","/musics/#{artist.id}/destroy", {method: "post",:class => "btn btn-danger"})
