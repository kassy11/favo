<div class="container">
  <div class="row">
    <div class="col-md-2">

    </div>
<div class="col-md-8">
  <h1 class="text-center font-weight-bold pt-5">新規登録</h1>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
  <div class="field pt-3">
    <%= f.label :name, '名前' %><br />
    <%= f.text_field :name, autofocus: true, class: "col-md-12 from-control" %>
  </div>
    <div class="field pt-3">
      <%= f.label :email, 'Email' %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "col-md-12 from-control" %>
    </div>

    <div class="field pt-3">
      <p><%= f.label :password, 'パスワード' %></p>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %>文字以上のパスワードを設定してください)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password",class: "col-md-12 from-control" %>
    </div>

    <div class="field pt-3">
      <%= f.label :password_confirmatio, 'パスワード確認' %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password",class: "col-md-12 from-control" %>
    </div>

    <div class="actions">
      <%= f.submit "新規登録" ,class:"btn btn-primary" %>
    </div>
  <% end %>
</div>
<div class="col-md-2">

</div>

  </div>
</div>
