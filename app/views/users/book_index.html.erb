<h3>書籍名で検索</h3>
  <%= form_tag(controller:"books",action:"index") do %>
    <%= text_field_tag :search %>
    <%= submit_tag '検索',:name => nil %>
  <% end %>

<h1>BOOK LIST</h1>
<%@user.my_books.each do |my_book|%>
