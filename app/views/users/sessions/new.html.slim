.container
  .row
    .col-md-2

    .col-md-8
      h1.text-center.font-weight-bold.pt-5
        | ログイン
      = button_to 'Twitterでログイン', user_twitter_omniauth_authorize_path, class: 'col-md-4 offset-md-4'
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .field.pt-3
          = f.label :email, 'Email'
          br
          = f.email_field :email, autofocus: true, autocomplete: "email",class: "col-md-12 from-control"
        .field.pt-3
          = f.label :password,'パスワード'
          br
          = f.password_field :password, autocomplete: "current-password", class: "col-md-12 form-control"
        - if devise_mapping.rememberable?
          .field.pt-3
            = f.label :remember_me,'情報を保存する'
            = f.check_box :remember_me
        .actions.pt-3
          = f.submit "ログイン", class:"btn btn-primary col-md-4 offset-md-4"
          br
      .pt-3

      .col-md-2

      .pt-3

      = render "users/shared/links"
