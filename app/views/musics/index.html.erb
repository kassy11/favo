<h1 class="text-center font-weight-bold">検索結果</h1>
<!-- 検索結果があるとないときで分けたい -->
<div class="search-results">
  <div class="card" style="width: 20rem;">
  <% @artists.each do |artist| %>
    <% if artist.images.any?%>
      <%image = artist.images[1]%>
      <%= image_tag(image["url"], :class => "card-img-top")%>
    <%else%>
      <%=image_tag("no_image.jpg", :class => "card-img-top")%>
    <%end%>
    <div class="card-body">
      <h4 class="card-title"><%= link_to(artist.name, "/musics/#{artist.id}")%></h4>
      <p class="card-text"><%=artist.genres[0]%></p>
    </div>
  <%end%>
  </div>
</div>
